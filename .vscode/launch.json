  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Typescript Run",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/index.ts",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "preLaunchTask": "tsc: 建置 - tsconfig.json",
      "args": ["--vscode"],
      "env": {"type": "typescript"}
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Javascript Run",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/index.ts",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "preLaunchTask": "tsc: 建置 - tsconfig.json",
      "args": ["--vscode"],
      "env": {"type": "javascript"}
    }
  ]
}
